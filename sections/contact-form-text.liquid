
<div class="contact-us">
  {% for block in section.blocks %}
    <h1>{{ block.settings.heading }}</h1>
    <div class="contact-us__form">
      <i class="fab fa-whatsapp"></i>
      <h3>{{ block.settings.sub_heading }}</h3>
      <p>
        {{ block.settings.phone_label }}
        <a href="tel:{{ block.settings.phone }}">{{ block.settings.phone }}</a>
      </p>
      <p>
        {{ block.settings.day_text }}:
        <span>{{ block.settings.day_count }}</span>
      </p>
      <p>
        {{ block.settings.day_time }}:
        <span>{{ block.settings.time_time }}</span>
      </p>
    </div>
    <div class="contact-us__form">
      <i class="fas fa-envelope"></i>
      <h3>Write to us</h3>
      <a href="mailto:{{ block.settings.email }}">{{ block.settings.email }}</a>
    </div>
    <div class="contact-us__form">
      <i class="fas fa-map-marker-alt"></i>
      <h3>Our Store</h3>
      <p>{{ block.settings.address }}</p>
    </div>
  {% endfor %}
</div>
{% schema %}
{
  "name": "Contact Us",
  "settings": [],
  "presets": [
    {
      "name": "Contact Us",
      "category": "Page"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Contact Information",
      "settings": [
        {
          "type": "text",
          "id":"heading",
          "label":"Heading",
          "default":"Contact Us"
        },
        {
          "type":"text",
          "id":"sub_heading",
          "label":"sub heading",
          "default":"Call or chat with us on WhatsApp"
        },
        {
          "type": "text",
          "id":"day_text",
          "label":"day text",
          "default":"Working Days "
        },
        {
          "type": "text",
          "id":"day_time",
          "label": "day time",
          "default":"Timing"
        },
        {
          "type": "text",
          "id": "time_time",
          "label": "time time",
          "default":"9pm"
        },
        {
          "type": "text",
          "id":"day_count",
          "label": "day count",
          "default":"mon-fri"
        },
        {
          "type": "text",
          "id": "phone_label",
          "label": "Phone Label",
          "default": "Phone No"
        },
        {
          "type": "text",
          "id": "phone",
          "label": "Phone Number",
          "default": "+91 74026 75555"
        },
        {
          "type": "text",
          "id": "email",
          "label": "Email Address",
          "default": "sarre@dazze.com"
        },
        {
          "type": "text",
          "id": "address",
          "label": "Store Address",
          "default": "Velachery, Chennai, Tamil Nadu 600042"
        }
      ]
    }

  ]
}
{% endschema %}
