
{{ 'component-Double-image.css' | asset_url | stylesheet_tag }}

<div class="container">
<div class="image-container-j page-width">
  {% for block in section.blocks %}
    <div class="div-cnetent">
        <h5>{{ block.settings.image_heading }}</h5>
       <div class="img-description">{{ block.settings.image_description }}</div>
    
     <p>{{ block.settings.image_para }}</p>
     <div class="j-button-j"> 
     <div >
    <a
            href="{{ block.settings.button_url  }}"
            class="button button--brown  button--primary double-img-with-txt__button--1">
            <span>{{  block.settings.button_label }}</span>
          </a>
   </div>
       <div>
   <a
            href="{{ block.settings.button_url  }}"
            class="button button--outline double-img-with-txt__button--2 "
          >
            <span>{{block.settings.read_button}}</span>
          </a>
   </div>
       
     
     </div>
    </div>
    <div class="multiple-image">
      <div class="align-self-center"> <img src="https://cdn.shopify.com/s/files/1/0580/5188/7203/files/Modern-Banarasi-Saree-For-Bengali-Marriage-370x555.jpg?v=1715144710"  height="200" width=300 sizes="(max-width: 80%) 50vw, 100%" class="first-img"></div>
      <div class="align-self-center"> <img src="https://cdn.shopify.com/s/files/1/0580/5188/7203/files/Modern-Banarasi-Saree-For-Bengali-Marriage-370x555.jpg?v=1715144710"   height="500" width=400 sizes="(max-width: 99%) 50vw, 500%" class="second-img"></div>
      </div>
      {% endfor %}
</div>
</div>


{% schema %}
{
  "name": "Contact Us",
  "settings": [],
  "presets": [
    {
      "name": "image image text",
      "category": "Page"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "image Information",
      "settings": [
        {
          "type": "text",
          "id":"heading",
          "label":"Heading",
          "default":"Contact Us"
        },
        {
          "type":"text",
          "id":"image_heading",
          "label":"image heading",
          "default":"Call or chat with us on WhatsApp"
        },
        {
          "type": "text",
          "id":"image_description",
          "label":"image description",
          "default":"Working Days "
        },
        {
          "type": "text",
          "id":"image_para",
          "label": "image para",
          "default":"Timing"
        },
        {
          "type": "text",
          "id": "button_heading",
          "label": "button heading",
          "default":"9pm"
        },
        {
          "type": "text",
          "id":"read_button",
          "label": "read button",
          "default":"mon-fri"
        },
          {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "SHOP ALL"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "default": "/"
    }
       
      ]
    }

  ]
}
{% endschema %}
